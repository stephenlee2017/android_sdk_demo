<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    tools:context="com.uparpu.demoapplication.NativeTestActivity"
    >
<LinearLayout

    android:id="@+id/activity_native_test"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbarStyle="outsideInset"
    >


    <TextView
        android:id="@+id/show_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:maxLines="12"
        android:textColor="#A1A1A1"
        android:text="这里显示结果：\n 一些请求的结果"
    />

    <Button
        android:id="@+id/show_gaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取gaid"/>

    <Button
        android:id="@+id/appstrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="app策略加载"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
         />



    <Button
        android:id="@+id/placece_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广告位策略策(所有平台)"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        />


    <Button
        android:id="@+id/placece_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求策略--facebook"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        />


    <Button
        android:id="@+id/placece_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求策略--admob"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/placece_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求策略--inmobi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        />


    <Button
        android:id="@+id/placece_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求策略--flurry"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/placece_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求策略--applovin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/placece_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求策略--mobivsta"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/show_real_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入Native广告获取页面"/>
</LinearLayout>
</ScrollView>